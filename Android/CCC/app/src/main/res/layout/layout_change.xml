<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Change"
    android:background="@color/background">

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60px">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text="Senha atual:"
            android:textSize="80px"
            android:textColor="@color/TextDefault" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingContraints">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="15px"
                android:layout_gravity="center"
                android:ems="5"
                android:inputType="textPassword"
                android:textColor="@color/TextDefault"
                android:textColorHint="@color/TextDefault"
                android:background="@color/backgroundEdit"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtRecover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esqueci minha senha"
            android:textColor="@color/TextDefault"
            android:gravity="center"
            android:layout_marginTop="30px"
            android:clickable="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text="Senha:"
            android:textSize="80px"
            android:textColor="@color/TextDefault" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingContraints">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="15px"
                android:layout_gravity="center"
                android:ems="5"
                android:inputType="textPassword"
                android:textColor="@color/TextDefault"
                android:textColorHint="@color/TextDefault"
                android:background="@color/backgroundEdit"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text="Confirmar senha:"
            android:textSize="80px"
            android:textColor="@color/TextDefault" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingContraints">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="15px"
                android:layout_gravity="center"
                android:ems="5"
                android:inputType="textPassword"
                android:textColor="@color/TextDefault"
                android:textColorHint="@color/TextDefault"
                android:background="@color/backgroundEdit"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="609dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#fff"
        android:orientation="vertical">
    </View>
    <Button
        android:layout_marginTop="610dp"
        android:id="@+id/confirmSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303030"
        android:text="Confirmar"
        android:textColor="#FFF" />
</RelativeLayout>